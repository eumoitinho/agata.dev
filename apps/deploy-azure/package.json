{
  "name": "@apps/deploy-azure",
  "version": "1.0.0",
  "private": true,
  "description": "Agatta Azure Deployment Service V3 - Serverless on Vercel with Azure backend services",
  "author": "Agatta Team",
  "license": "AGPL-3.0-only",
  "type": "module",
  "scripts": {
    "dev": "vercel dev",
    "build": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "format": "biome format . --write",
    "clean": "rm -rf dist .vercel",
    "vercel:deploy": "vercel deploy --prod",
    "vercel:deploy:preview": "vercel deploy",
    "azure:setup-env": "./scripts/setup-env.sh",
    "azure:login": "az login",
    "docker:build": "docker build -f docker/Dockerfile.build -t agatta-deploy-azure:build .",
    "tf:init": "cd infrastructure/terraform && terraform init",
    "tf:plan": "cd infrastructure/terraform && terraform plan",
    "tf:apply": "cd infrastructure/terraform && terraform apply"
  },
  "dependencies": {
    "@azure/arm-appcontainers": "^2.0.0",
    "@azure/arm-containerinstance": "^9.1.0",
    "@azure/container-registry": "^1.0.0",
    "@azure/cosmos": "^4.1.1",
    "@azure/identity": "^4.4.1",
    "@azure/keyvault-secrets": "^4.8.0",
    "@azure/service-bus": "^7.9.4",
    "@azure/storage-blob": "^12.24.0",
    "@vercel/node": "^5.3.24",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
    "@biomejs/biome": "^2.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.5.4",
    "vercel": "^48.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}