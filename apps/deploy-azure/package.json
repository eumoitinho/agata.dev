{
  "name": "@apps/deploy-azure",
  "version": "1.0.0",
  "private": true,
  "description": "Azure deployment service V3 for Libra platform",
  "author": "Libra Team",
  "license": "AGPL-3.0-only",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && docker build -t libra-deploy-azure .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "azure:login": "az login",
    "azure:deploy:dev": "az containerapp up --name libra-deploy-dev --resource-group libra-dev",
    "azure:deploy:prod": "az containerapp up --name libra-deploy-prod --resource-group libra-prod",
    "docker:build": "docker build -f docker/Dockerfile.build -t libra-deploy-azure:build .",
    "docker:push": "az acr build --registry libraregistry --image deploy-azure:latest .",
    "tf:init": "cd infrastructure/terraform && terraform init",
    "tf:plan": "cd infrastructure/terraform && terraform plan",
    "tf:apply": "cd infrastructure/terraform && terraform apply"
  },
  "dependencies": {
    "@azure/identity": "^4.0.0",
    "@azure/service-bus": "^7.9.3",
    "@azure/storage-blob": "^12.17.0",
    "@azure/cosmos": "^4.0.0",
    "@azure/keyvault-secrets": "^4.8.0",
    "@azure/arm-containerinstance": "^9.1.0",
    "@azure/arm-appcontainers": "^2.0.0",
    "@azure/container-registry": "^1.0.0",
    "@libra/api": "workspace:*",
    "@libra/auth": "workspace:*",
    "@libra/common": "workspace:*",
    "@libra/db": "workspace:*",
    "hono": "^4.8.10",
    "zod": "^4.0.14",
    "drizzle-orm": "^0.44.4",
    "dockerode": "^4.0.2"
  },
  "devDependencies": {
    "@types/bun": "^1.2.22",
    "@types/dockerode": "^3.3.23",
    "@types/node": "^20.14.9",
    "@vitest/coverage-v8": "^3.2.4",
    "tsx": "^4.13.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}