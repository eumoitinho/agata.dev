# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_RESOURCE_GROUP=libra-resources
AZURE_LOCATION=eastus

# Azure Container Registry
AZURE_CONTAINER_REGISTRY=libraregistry
AZURE_REGISTRY_USERNAME=your-registry-username
AZURE_REGISTRY_PASSWORD=your-registry-password

# Azure Service Bus
AZURE_SERVICE_BUS_CONNECTION_STRING=your-service-bus-connection
AZURE_SERVICE_BUS_QUEUE_NAME=deployment-queue
AZURE_SERVICE_BUS_DLQ_NAME=deployment-dlq

# Azure Storage
AZURE_STORAGE_CONNECTION_STRING=your-storage-connection
AZURE_STORAGE_CONTAINER_LOGS=deployment-logs
AZURE_STORAGE_CONTAINER_ARTIFACTS=deployment-artifacts

# Azure Cosmos DB
AZURE_COSMOS_CONNECTION_STRING=your-cosmos-connection
AZURE_COSMOS_DATABASE=libra-deployments
AZURE_COSMOS_CONTAINER=deployments

# Azure Key Vault
AZURE_KEY_VAULT_URI=https://your-keyvault.vault.azure.net/

# Container Apps Configuration
AZURE_CONTAINER_APP_ENV=libra-environment
AZURE_CONTAINER_APP_NAME_PREFIX=libra-app
AZURE_DNS_ZONE=libra.azure.com

# Deployment Configuration
MAX_CONCURRENT_DEPLOYMENTS=10
DEPLOYMENT_TIMEOUT_MS=600000
BUILD_CONTAINER_CPU=2
BUILD_CONTAINER_MEMORY=4Gi
RUNTIME_CONTAINER_CPU=0.5
RUNTIME_CONTAINER_MEMORY=1Gi

# Monitoring
AZURE_APP_INSIGHTS_CONNECTION_STRING=your-app-insights-connection
LOG_LEVEL=info

# Network Configuration
AZURE_VNET_NAME=libra-vnet
AZURE_SUBNET_NAME=deployment-subnet

# Feature Flags
ENABLE_AUTO_SCALING=true
ENABLE_CDN_INTEGRATION=true
ENABLE_MULTI_REGION=false