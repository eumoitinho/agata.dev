{
  "name": "@agatta/deploy-azure-hybrid",
  "version": "1.0.0",
  "private": true,
  "description": "Agatta Deploy V3 - Hybrid Cloudflare Workers + Azure Backend",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "tail": "wrangler tail",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:integration": "wrangler dev --test-scheduled",
    "secrets:setup": "bash ../scripts/setup-worker-secrets.sh",
    "cron:trigger": "wrangler cron trigger",
    "logs": "wrangler tail --format json"
  },
  "dependencies": {
    "hono": "^4.8.10",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240529.0",
    "@types/node": "^20.14.12",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0",
    "wrangler": "^3.78.12"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}