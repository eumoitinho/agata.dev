{
  "name": "@agatta/deploy-workflow",
  "version": "1.0.5",
  "description": "Cloudflare Workflows-based deployment service for Agatta platform (Deploy V1)",
  "scripts": {
    "dev": "wrangler dev --port 3008 --persist-to=../web/.wrangler/state",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "typecheck": "tsc --noEmit",
    "update": "bun update",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "format": "biome format .",
    "clean": "rm -rf dist .wrangler node_modules/.cache"
  },
  "dependencies": {
    "@agatta/auth": "*",
    "@agatta/common": "*",
    "@agatta/db": "*",
    "@agatta/middleware": "*",
    "@agatta/sandbox": "*",
    "@agatta/templates": "*",
    "@agatta/typescript-config": "*",
    "hono": "^4.9.8",
    "@scalar/hono-api-reference": "^0.9.19",
    "@hono/zod-openapi": "^0.19.10",
    "zod": "^4.1.11",
    "drizzle-orm": "^0.44.5"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@cloudflare/workers-types": "^4.20241218.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "wrangler": "^3.120.0"
  },
  "keywords": [
    "cloudflare-workflows",
    "deployment",
    "workers",
    "agatta",
    "hono"
  ],
  "license": "AGPL-3.0-only",
  "engines": {
    "node": ">=18.0.0"
  }
}