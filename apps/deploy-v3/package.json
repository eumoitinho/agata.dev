{
  "name": "@agatta/deploy-v3",
  "version": "1.0.0",
  "description": "Azure-based deployment service for Agatta platform (Deploy V3)",
  "scripts": {
    "build": "bun build src/azure-entrypoint.ts --target node --outdir dist --minify --sourcemap",
    "dev": "NODE_ENV=development PORT=3010 bun --watch src/azure-entrypoint.ts",
    "dev:api": "PORT=3010 NODE_ENV=development bun --watch src/azure-entrypoint.ts",
    "dev:consumer": "ENABLE_QUEUE_CONSUMER=true NODE_ENV=development bun --watch src/azure-entrypoint.ts",
    "start": "NODE_ENV=production bun dist/azure-entrypoint.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "format": "biome format .",
    "clean": "rm -rf dist .next node_modules/.cache",
    "deploy": "bun build && az containerapp update --name agatta-deploy-v3 --resource-group $(AZURE_RESOURCE_GROUP) --yaml azure-container-app.yaml",
    "preview": "bun build && bun start",
    "docker:build": "docker build -t agatta/deploy-v3:latest .",
    "docker:run": "docker run -p 3010:3010 -p 8080:8080 --env-file .env agatta/deploy-v3:latest"
  },
  "dependencies": {
    "@agatta/auth": "*",
    "@agatta/common": "*",
    "@agatta/db": "*",
    "@agatta/middleware": "*",
    "@agatta/sandbox": "*",
    "@agatta/templates": "*",
    "@agatta/typescript-config": "*",
    "hono": "^4.9.8",
    "@scalar/hono-api-reference": "^0.9.19",
    "@hono/zod-openapi": "^0.19.10",
    "@hono/node-server": "^1.13.4",
    "zod": "^4.1.11",
    "drizzle-orm": "^0.44.5",
    "@azure/service-bus": "^7.9.5",
    "@azure/cosmos": "^4.2.1",
    "@azure/storage-blob": "^12.25.0",
    "@azure/keyvault-secrets": "^4.8.0",
    "@azure/identity": "^4.4.1"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "tsx": "^4.19.1",
    "docker": "^1.0.0"
  },
  "keywords": [
    "azure-container-apps",
    "deployment",
    "service-bus",
    "agatta",
    "hono",
    "cosmos-db"
  ],
  "license": "AGPL-3.0-only",
  "engines": {
    "node": ">=18.0.0"
  }
}